{# Administration - Modification Paramètre Serveur #}
{% extends "_base.twig" %}

{% block style %}{% endblock %}

{% block description %}Paramètre Serveur{% endblock %}

{% block key %}Paramètre Serveur{% endblock %}

{% block title %}Paramètre Serveur{% endblock %}

{% block main %}
<section class="contenu">
  <form class="connexion" action="" method="post">
    <h1>Section paramètre</h1>
    <div>
      <label for="name">Echec maximum de connexion :</label>
      <input class="short" type="number" min="0" name="failed_connexion" id="failed_connexion" placeholder="{{ fail }}"></input>
    </div>

    <div>
      <label for="name">Période de retrait de permis :</label>
      <select class="short" name="periode_drive" id="periode_drive">
        {% if _typePermis == "w" %}
        <option value="w">Semaine</option>
        <option value="w">=========</option>
        <option value="j">Jour</option>
        <option value="h">Heure</option>
        <option value="m">Minute</option>
        <option value="s">Seconde</option>
        {% endif %}

        {% if _typePermis == "j" %}
        <option value="j">Jour</option>
        <option value="j">=========</option>
        <option value="w">Semaine</option>
        <option value="h">Heure</option>
        <option value="m">Minute</option>
        <option value="s">Seconde</option>
        {% endif %}

        {% if _typePermis == "h" %}
        <option value="h">Heure</option>
        <option value="h">=========</option>
        <option value="w">Semaine</option>
        <option value="j">Jour</option>
        <option value="m">Minute</option>
        <option value="s">Seconde</option>
        {% endif %}

        {% if _typePermis == "m" %}
        <option value="m">Minute</option>
        <option value="m">=========</option>
        <option value="w">Semaine</option>
        <option value="j">Jour</option>
        <option value="h">Heure</option>
        <option value="s">Seconde</option>
        {% endif %}

        {% if _typePermis == "s" %}
        <option value="s">Seconde</option>
        <option value="s">=========</option>
        <option value="w">Semaine</option>
        <option value="j">Jour</option>
        <option value="h">Heure</option>
        <option value="m">Minute</option>
        {% endif %}
      </select>
    </div>

    <div>
      <label for="name">Temps :</label>
      <input class="short" type="number" min="0" id="time_dirve" name="time_dirve" placeholder="{{ _tpsPermis }}"></input>
    </div>

    <h1>Section Faction</h1>
    <div>
      <label for="name">Grade Censure :</label>
      <input class="short" type="number" min="0" name="level_censure" id="level_censure" placeholder="{{ grade }}"></input>
    </div>

    <div>
      <label for="name">Etat candidature :</label>
      <select class="short" name="etat_recrut" id="etat_recrut">
        {% if _Recrutement == "0" %}
        <option value="0">Fermé</option>
        <option value="1">Ouvert</option>
        {% else %}
        <option value="1">Ouvert</option>
        <option value="0">Fermé</option>
        {% endif %}
      </select>
    </div>

    <div>
      <p id="confirm_admin_modifserv">Modification(s) effectuée(s)</p>
    </div>

    <div class="btn">
      <button class="form_button" type="submit" name="button" onclick="EditServParam();">Modifier</button>
    </div>
  </form>
</section>
{% endblock %}

{% block script %}
<script src="/assets/script/event_saisie.js"></script>
<script type="text/javascript">
  document.getElementById("confirm_admin_modifserv").style.display = "none";
</script>
{% endblock %}
